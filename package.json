{
    "name": "autopairs-code",
    "displayName": "AutoPairs",
    "description": "AutoPairs-like behavior for VS Code",
    "version": "0.0.1",
    "publisher": "jbhannah",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "AutoPairs configuration",
            "properties": {
                "autopairs-code.enable": {
                    "type": "boolean",
                    "default": "true",
                    "description": "Set to false to completely disable AutoPairs behavior."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
